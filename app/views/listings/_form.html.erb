<div class="container">
  <div class ="form">
    <div class="form-total">
      <%= simple_form_for(@listing) do |f| %>
      <div class="form-title">
        <%= f.label :title%><br>
        <%= f.text_field :title%><br><br>
        <%= f.label :description%><br>
        <%= f.text_field :description%><br><br>
        <%= f.label :category%><br>
        <%= f.select :category, ["Fresh Vegetables", "Frozen Vegetables", "Ready To Eat Salads", "Grow Your Own Microgreens", "Other Vegetables"]%><br><br>
        <%= f.label :quantity%><br>
        <%= f.text_field :quantity%><br><br>
        <%= f.label :unit_price%><br>
        <%= f.text_field :unit_price%><br><br>
        <%= f.input :expiry_date, as: :date %><br>
        <%= f.input :photo, as: :file %>
      </div>
      <div class="button">
        <%= f.submit "Add", class: "btn btn-primary"%>
      </div>
        <% end %>
      </div>
  </div>
</div>



